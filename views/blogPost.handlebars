<section class="blogpost-page">
  <div class="container display-flex">
    <div class="box col-12">
      <div class="card flex-column">
        <div class="card-header display-flex justify-space-between">
          <h2>{{post.postTitle}}</h2>
          <p class="my-auto">Posted by {{post.user.username}} on {{format_date post.postDate}}</p>
        </div>
        <div class="card-body bg-light" style="flex: 1">
          <p>{{post.postContent}}</p>
        </div>
      </div>
    </div>
  </div>

  {{#if post.comments}}
  <div class="container display-flex">
    <h2>Comments</h2>
  </div>
  <div class="container display-flex">
    <div class="box col-12">
      {{#each post.comments}}
      <section class="comment">
        <div class="card flex-column box-shadow p-5 bg-light">
          <p>
            {{commentsContent}}
            <br>
            <span class="comment-details">
              <span class="comment-author">{{commentsAuthor}}</span>
              <span class="comment-date">{{format_date commentsDate}}</span>
            </span>
          </p>
        </div>
      </section>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <div class="container display-flex box col-6">
    <form class="form newComment-form">
      <div class="form-group">
        <label for="comment-content"><h3>Comment</h3></label>
        <textarea class="form-input" type="text" id="comment-content"></textarea>
      </div>
      <div class="form-group display-flex py-2">
        <button class="btn btn-primary" style="flex-grow: 1" type="submit">Submit</button>
      </div>
    </form>
  </div>

</section>

<script src="/js/createComment.js"></script>
