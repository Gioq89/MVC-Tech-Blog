<section class="createpost-page">

    <div class="createpost-card card bg-light m-5 p-5 box-shadow">
            <a href="/dashboard" class="back-btn">Back to Dashboard</a>
        <h1 class="create-post-title">Create Post</h1>

        <form class="createPost-form">

            <div class="form-group">
                <label for="post-title" class="form-label">Title</label>
                <input class="form-input" type="text" id="post-title" name="post-title" placeholder="insert blog title"/>
            </div>

            <div class="form-group">
                <label for="post-content" class="form-label">Content</label>
                <textarea class="form-input p-5" id="post-content" name="post-content" placeholder="insert blog content"></textarea>
            </div>

            <div class="form-group display-flex">
                <button class="btn btn-primary flex-grow-1" type="submit">Create Post</button>
            </div>

        </form>

    </div>
</section>

<script src="/js/createPost.js"></script>
