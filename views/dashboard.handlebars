<section class="dashboard">

  <div class="userposts-container">
    {{#each blogPost as |userpost|}}
      <a href="/dashboard/edit/{{userpost.id}}" class="post-link">
        <div class="post-card box-shadow">
          <div class="post-header display-flex justify-space-between">
            <h2 class="post-title">{{userpost.postTitle}}</h2>
            <h3 class="post-date">{{format_date userpost.postDate}}</h3>
          </div>

        </div>
      </a>

    {{/each}}

    <div class="dashboard-btn-container justify-center m-5">
      <button class="dashboard-btn" id="dashboard-btn">Create Post</button>
    </div>
  </div>
</section>

<script src="/js/dashboard.js"></script>